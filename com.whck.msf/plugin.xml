<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            visible="true">
         <run
               class="com.whck.msf.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.whck.msf.Perspective"
            id="com.whck.msf.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.whck.msf.ZoneListView"
            fastViewWidthRatio="0.4"
            icon="images/tree.png"
            id="com.whck.msf.zonelistview"
            name="区域列表"
            restorable="true">
      </view>
      <view
            class="com.whck.msf.ShowView"
            fastViewWidthRatio="0.6"
            icon="images/show.png"
            id="com.whck.msf.showview"
            name="实时显示"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="com.whck.msf.zonelistview"
               minimized="false"
               relationship="left"
               relative="com.whck.msf.showview"
               visible="true">
         </view>
         <view
               closeable="false"
               id="com.whck.msf.showview"
               minimized="false"
               ratio="0.3"
               relationship="right"
               relative="com.whck.msf.zonelistview"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
 
   <extension
         point="org.eclipse.ui.commands">
           <category
            id="com.whck.msf.category.zone"
            name="zone menu category">
      </category>
      <command
            categoryId="com.whck.msf.category.zone"
            id="com.whck.msf.command.zone.delete"
            name="zdelete">
      </command>
      <command
            categoryId="com.whck.msf.category.zone"
            id="com.whck.msf.command.zone.modify"
            name="zmodify">
      </command>
      <command
            categoryId="com.whck.msf.category.tool"
            id="com.whck.msf.command.zone.add"
            name="zadd   ">
      </command>
      <category
            id="com.whck.msf.category.tool"
            name="tool menu category">
      </category>
      <category
            id="com.whck.msf.category.device"
            name="device menu category">
      </category>
      <command
            categoryId="com.whck.msf.category.device"
            id="com.whck.msf.command.device.modify"
            name="dmodify">
      </command>
      <command
            categoryId="com.whck.msf.category.device"
            id="com.whck.msf.command.device.add"
            name="dadd">
      </command>
      <command
            categoryId="com.whck.msf.category.zone"
            id="com.whck.msf.command.device.delete"
            name="ddelete">
      </command>
      <category
            id="com.whck.msf.category.variable"
            name="variable menu category">
      </category>
      <command
            categoryId="com.whck.msf.category.device"
            id="com.whck.msf.command.variable.add"
            name="vadd">
      </command>
      <command
            categoryId="com.whck.msf.category.variable"
            id="com.whck.msf.command.variable.modify"
            name="vmodify">
      </command>
      <command
            categoryId="com.whck.msf.category.variable"
            id="com.whck.msf.command.variable.delete"
            name="vdelete">
      </command>
      <command
            categoryId="com.whck.msf.category.chart"
            id="com.whck.msf.command.chart"
            name="showchart">
      </command>
      <category
            id="com.whck.msf.category.chart"
            name="chart category">
      </category>
      <command
            categoryId="com.whck.msf.category.zone"
            id="com.whck.msf.command.set"
            name="set">
      </command>
   </extension>
     <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:com.whck.msf.zonelistview?after=additions">
         <command
               commandId="com.whck.msf.command.zone.delete"
               icon="images/delete.png"
               label="删除分区"
               style="push">
           <visibleWhen
                 checkEnabled="false">
              <with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="com.whck.msf.model.Zone">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
         </command>
         <command
               commandId="com.whck.msf.command.zone.modify"
               icon="images/modify.png"
               label="修改分区"
               style="push">
             <visibleWhen
                 checkEnabled="false">
              <with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="com.whck.msf.model.Zone">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
         </command>
         <command
               commandId="com.whck.msf.command.device.delete"
               icon="images/delete.png"
               label="删除设备"
               style="push">
                <visibleWhen
                 checkEnabled="false">
              <with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="com.whck.msf.model.Device">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
         </command>
         <command
               commandId="com.whck.msf.command.device.modify"
               icon="images/modify.png"
               label="修改设备"
               style="push">
                <visibleWhen
                 checkEnabled="false">
              <with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="com.whck.msf.model.Device">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
         </command>
         <command
               commandId="com.whck.msf.command.device.add"
               icon="images/add.png"
               label="添加设备"
               style="push">
                <visibleWhen
                 checkEnabled="false">
              <with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="com.whck.msf.model.Zone">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
         </command>
         <command
               commandId="com.whck.msf.command.variable.add"
               icon="images/add.png"
               label="添加变量"
               style="push">
                <visibleWhen
                 checkEnabled="false">
              <with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="com.whck.msf.model.Device">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
         </command>
         <command
               commandId="com.whck.msf.command.variable.modify"
               icon="images/modify.png"
               label="修改变量"
               style="push">
                <visibleWhen
                 checkEnabled="false">
              <with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="com.whck.msf.model.Variable">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
         </command>
         <command
               commandId="com.whck.msf.command.variable.delete"
               icon="images/delete.png"
               label="删除变量"
               style="push">
                <visibleWhen
                 checkEnabled="false">
              <with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="com.whck.msf.model.Variable">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:com.whck.msf.zonelistview?after=additions">
         <command
               commandId="com.whck.msf.command.zone.add"
               icon="images/add.png"
               style="push"
               tooltip="添加区域">
           <visibleWhen
                 checkEnabled="true">
              	<with
                    variable="selection">
                 <iterate
                       ifEmpty="false"
                       operator="or">
                    <adapt
                          type="com.whck.msf.model.Zone">
                    </adapt>
                 </iterate>
              </with>
           </visibleWhen>
         </command>
         <command
               commandId="com.whck.msf.command.chart"
               icon="images/plot.png"
               label="com.whck.msf.command.chart"
               style="push"
               tooltip="曲线图">
         </command>
         <command
               commandId="com.whck.msf.command.set"
               icon="images/setting.png"
               style="push"
               tooltip="雨型匹配">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="default">
                  <adapt
                        type="com.whck.msf.Any">
                  </adapt>
               </with>
               <with
                     variable="default">
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
     <extension
           point="org.eclipse.ui.handlers">
        <handler
              class="com.whck.msf.handler.ZoneDeleteHandler"
              commandId="com.whck.msf.command.zone.delete">
        </handler>
        <handler
              class="com.whck.msf.handler.ZoneAddHandler"
              commandId="com.whck.msf.command.zone.add">
        </handler>
        <handler
              class="com.whck.msf.handler.ZoneModifyHandler"
              commandId="com.whck.msf.command.zone.modify">
        </handler>
        <handler
              class="com.whck.msf.handler.DeviceDeleteHandler"
              commandId="com.whck.msf.command.device.delete">
        </handler>
        <handler
              class="com.whck.msf.handler.DeviceAddHandler"
              commandId="com.whck.msf.command.device.add">
        </handler>
        <handler
              class="com.whck.msf.handler.VariableAddHandler"
              commandId="com.whck.msf.command.variable.add">
        </handler>
        <handler
              class="com.whck.msf.handler.VariableModifyHandler"
              commandId="com.whck.msf.command.variable.modify">
        </handler>
        <handler
              class="com.whck.msf.handler.VariableDeleteHandler"
              commandId="com.whck.msf.command.variable.delete">
        </handler>
        <handler
              class="com.whck.msf.handler.ShowChartHandler"
              commandId="com.whck.msf.command.chart">
        </handler>
        <handler
              class="com.whck.msf.handler.DeviceModifyHandler"
              commandId="com.whck.msf.command.device.modify">
        </handler>
        <handler
              class="com.whck.msf.handler.SetHandler"
              commandId="com.whck.msf.command.set">
        </handler>
     </extension>
     <extension
           id="product"
           point="org.eclipse.core.runtime.products">
        <product
              application="com.whck.msf.application"
              name="地表径流">
           <property
                 name="applicationCSS"
                 value="platform:/plugin/com.whck.msf/msf.css">
           </property>
           <property
                 name="appName"
                 value="地表径流">
           </property>
           <property
                 name="windowImages"
                 value="alt_window_16.gif,alt_window_32.gif">
           </property>
        </product>
     </extension>
     <extension
           point="org.eclipse.ui.splashHandlers">
        <splashHandler
              class="com.whck.msf.splashHandlers.BrowserSplashHandler"
              id="com.whck.msf.splashHandlers.browser">
        </splashHandler>
     </extension>
</plugin>
